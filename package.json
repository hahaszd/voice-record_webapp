{
  "name": "voicespark-tests",
  "version": "1.0.0",
  "description": "Automated tests for VoiceSpark",
  "scripts": {
    "test": "playwright test smoke --reporter=list",
    "test:all": "playwright test --reporter=html",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:smoke": "playwright test smoke",
    "test:mobile": "playwright test mobile",
    "precommit": "npm run test:smoke"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0"
  }
}
